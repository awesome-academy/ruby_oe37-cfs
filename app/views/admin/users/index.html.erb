<br/>
<div class="col-md-10 col-lg-offset-1">
<table class="table table-bordered">
  <tr class="bg-primary">
  <th class="text-center col-md-1">index</th>
  <th class="text-center col-md-2">full name</th>
  <th class="text-center col-md-3">email</th>
  <th class="text-center col-md-4">activated</th>
  <th class="text-center col-md-5">activated_at</th>
  <th class="text-center col-md-6"></th>
  <th class="text-center col-md-6"></th>
</tr>
  <% @users.each_with_index do |item, index| %>
      <tr>
        <td><%= create_index params[:page], index, Settings.user.page %></td>
        <td scope="row"><%= item.full_name %></td>
        <td scope="row"><%= item.email %></td>
        <td scope="row"><%= item.activated %></td>
        <td scope="row"><%= item.activated_at %></td>
        <td scope="row"><%= link_to t("manger_user.delete"), item, method: :delete %></td>
        <td scope="row"><%= link_to "show", item %></td>
      </tr>
  <% end %>
</table>
 <div id="paginator">
    <%= paginate @users %>
  </div>
</div>
<p>
  Download:
  <%= link_to "CSV", admin_users_path(format: "csv") %> |
  <%= link_to "Excel", admin_users_path(format: "xls") %>
</p>
