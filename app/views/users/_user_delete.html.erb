<%= form_for(@user) do |f| %>

  <%= hidden_field_tag :full_name, class: "form-control" %>

  <%= hidden_field_tag :email, class: "form-control" %>

  <%= hidden_field_tag :password, class: "form-control"%>

  <%= hidden_field_tag :password_confirmation, class: "form-control" %>

  <%= f.label :reason, "Session" %>
  <%= f.text_field :reason, class: "form-control" %>

  <%= f.submit "submit", class: "btn btn-primary spacing" %>
<% end %>
