<% provide :title, t(".view_plan") %>
<p>
  <%= t(".download") %>
  <%= link_to t(".excel"), plans_path(format: "xls"), id: "export" %>
</p>
<%= javascript_pack_tag "export.js" %>
<%= search_form_for @search, remote: true do |f| %>
  <div class="col-md-10 col-lg-offset-1">
    <%= f.label :month_eq, t(".month") %>
    <%= f.select :month_eq, options_for_select(1..12),
    {include_blank: true}, class: "form-control" %>

    <%= f.label :status_eq, t(".status") %>
    <%= f.select :status_eq,
      options_for_select(Plan.status_option_search),
      {include_blank: true}, class: "form-control" %>
  </div>
  <div class="col-md-10 col-lg-offset-1">
    <%= f.submit t(".search"), id: "submit", class: "btn btn-primary" %>
  </div>
<% end %>
<div id="total_moneys" class="col-md-10 col-lg-offset-1">
  <%= render "total_table" %>
</div>
<div>
  <h1 class="col-md-10 col-lg-offset-1 text-center"><%= t ".plan_list" %></h1>
</div>
<div id="expenses" class="col-md-10 col-lg-offset-1">
  <%= render "expenses" %>
</div>
<div id="income" class="col-md-10 col-lg-offset-1">
  <%= render "income" %>
</div>
