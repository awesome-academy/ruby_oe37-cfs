<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".cash_flow_management"), home_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t(".home"), home_path %></li>
          <li><%= link_to t(".category"), categories_path %></li>
          <li class="dropdown">
            <a href="" class="dropdown-toggle" data-toggle="dropdown">
              <%= t ".plan" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".new_plan"), new_plan_path %></li>
              <li><%= link_to t(".view_plan"), plans_path %></li>
              <li><%= link_to t(".share_plan"), new_share_path %></li>
              <li><%= link_to t(".view_shared"), shares_path %></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="" class="dropdown-toggle" data-toggle="dropdown">
              <%= t ".account" %> <b class="caret"></b>
            </a>
            <% if user_signed_in? %>
              <ul class="dropdown-menu">
                <% if current_user.admin? %>
                  <li><%= link_to t("admin.page"), admin_users_path %></li>
                <% end %>
                <li><%= link_to t(".upgrade"), edit_user_path(current_user) %></li>
                <li><%= link_to t(".settings"), edit_user_registration_path %></li>
                <li><%= link_to t(".signout"),
                destroy_user_session_path, method: :delete %>
                </li>
              </ul>
            <% else %>
              <ul class="dropdown-menu">
                <li><%= link_to t(".sign_up"), new_user_registration_path %></li>
                <li><%= link_to t(".login"), new_user_session_path %>
                </li>
              </ul>
            <% end %>
          </li>
        <li class="dropdown">
          <a href="" class="dropdown-toggle" data-toggle="dropdown">
            <%= t ".language" %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t(".english"), locale: :en %></li>
            <li><%= link_to t(".vietnamese"), locale: :vi %></li>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>
