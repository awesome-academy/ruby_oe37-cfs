<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".cash_flow_management"), home_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to t(".home"), home_path %></li>
          <li><%= link_to t(".chart"), chart_path %></li>
          <li><%= link_to t(".category"), categories_path %></li>
          <li class="dropdown">
            <a href="" class="dropdown-toggle" data-toggle="dropdown">
              <%= t ".plan" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".newplan"), new_plan_path %></li>
              <li><%= link_to t(".viewplan"), plans_path %></li>
              <li><%= link_to t(".share_plan"), new_share_path %></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="" class="dropdown-toggle" data-toggle="dropdown">
              <%= t ".account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to t(".signout"),
              logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".login"), login_path %></li>
        <% end %>
        <li class="dropdown">
          <a href="" class="dropdown-toggle" data-toggle="dropdown">
            <%= t ".language" %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t(".english"), locale: :en %></li>
            <li><%= link_to t(".vietnamese"), locale: :vi %></li>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>
